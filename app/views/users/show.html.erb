<div class='user' style='display: flex;'>
<% if @user.avatar.attached? %>
    <%= image_tag(@user.avatar, style: "display: inline-block;
                                        margin-right: 50px;
                                        width:  200px;
                                        height: 200px;
                                        border-radius:50%;") %>
<% end %>
<%= turbo_frame_tag 'author' do %>
    <div class='attributes'>
        <h2><%= @user.name %></h2>
        <h2><%= @user.email %></h2>
    </div>
    <% a =[] %>
    <% current_user.given_follows.each do |f|  %>
        <% a << f.followed_user_id %></li>
    <% end %>
    <% if !a.include?(@user.id) && @user != current_user%>
    <%# do not display follow button when a user views his/her own profile%>
        <ul>
        <%= render "follows/form", user: @user %>
        </ul>
    <% end %>
<% end %>
</div><br>
<div style='margin-left: 60px'><%=link_to 'Back home', root_path%></div>